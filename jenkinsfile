pipeline {
  agent any

  stages {
    stage('Build') {
      steps {
        echo 'Building the app...'
      }
    }
  }

  post {
    success {
      emailext (
        subject: "✅ SUCCESS: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
        body: "The build succeeded!\n\nCheck console output at: ${env.BUILD_URL}",
        to: "hemanthd335@gmail.com"
      )
    }
    failure {
      emailext (
        subject: "❌ FAILURE: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
        body: "The build failed. Investigate the logs here:\n\n${env.BUILD_URL}",
        to: "hemanthd335@gmail.com"
      )
    }
  }
}
