pipeline {
  agent any

  stages {
    stage('Build') {
      steps {
        echo 'Building the app...'
        sh 'echo "Build was successful!" > build-output.txt'
      }
    }

    stage('Archive') {
      steps {
        archiveArtifacts artifacts: 'build-output.txt', fingerprint: true
      }
    }
  }

  post {
    success {
      echo "âœ… Build and archiving complete."
    }
  }
}
