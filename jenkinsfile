pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        echo 'Building...'
      }
    }
    stage('Test') {
      steps {
        echo 'Running tests...'
      }
    }
  }
  post {
    success {
      emailext subject: "✅ Build Success: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
               body: "Great job! View it here: ${env.BUILD_URL}",
               to: "hemanthd335@gmail.com"
    }
    failure {
      emailext subject: "❌ Build Failed: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
               body: "Please check the logs at: ${env.BUILD_URL}",
               to: "hemanthd335@gmail.com"
    }
  }
}
