pipeline {
  agent any
  parameters {
    string(name: 'ENVIRONMENT', defaultValue: 'dev', description: 'Which environment to deploy to?')
  }
  stages {
    stage('Build') {
      steps {
        echo "Building for environment: ${params.ENVIRONMENT}"
      }
    }
    stage('Test') {
      steps {
        echo "Running tests..."
      }
    }
    stage('Deploy') {
      steps {
        echo "Deploying to ${params.ENVIRONMENT} environment"
      }
    }
  }
}
